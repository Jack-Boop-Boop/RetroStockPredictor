{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/analyze",
      "dest": "/api/analyze.py"
    },
    {
      "src": "/api/portfolio",
      "dest": "/api/portfolio.py"
    },
    {
      "src": "/api/quote",
      "dest": "/api/quote.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/public/static/$1"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    }
  ]
}
